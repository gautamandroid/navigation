<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".navigationView.profile.ChangePasswordFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_half" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/tv_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:padding="@dimen/_10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/optima_bold"
                android:text=" Change Password "
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_25sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Old Password"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/bg_textview"
            android:elevation="@dimen/_10dp"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_5dp"
            android:paddingVertical="@dimen/_13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="New Password"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/bg_textview"
            android:elevation="@dimen/_10dp"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_5dp"
            android:paddingVertical="@dimen/_13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="New Password"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/bg_textview"
            android:elevation="@dimen/_10dp"
            android:inputType="textPassword"
            android:paddingHorizontal="@dimen/_5dp"
            android:paddingVertical="@dimen/_13dp" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_login"
        style="@style/Button.Full"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_40dp"
        android:layout_marginBottom="@dimen/_40dp"
        android:checkable="true"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="@string/confirm"
        android:textSize="@dimen/_18sp" />

</RelativeLayout>